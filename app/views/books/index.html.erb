<div>
  <%= flash[:notice] %>
</div>

<body>
  <h2 class="header">Books</h2>

  <table>
    <thread>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
      <tbody>
        <tr>
          <td>
            <% @books.each do |book| %>
              <div class="book-list"><%= book.title %></div>
              <div class="book-list"><%= book.body %></div>
              <div class="book-comment">
                <%= link_to "show", book_path(book.id) %>
                <%= link_to "Edit", edit_book_path(book.id) %>
                <%= link_to "destroy", book_path(book.id), method: :delete, "data-comfirm" => "Are you sure?" %>
              </div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </thread>
  </table>

  <h3 class="new-book">New Book</h3>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  
  <%= form_with model: @book do |f| %>
    <div class ="text-field">
      <div>title</div>
      <%= f.text_field :title %>
    </div>
  
    <div class ="text-area">
      <div>body</div>
      <%= f.text_area :body %>
    </div>
  
    <div class ="text-submit"><%= f.submit 'Create Book' %></div>

  <% end %>
</body>
