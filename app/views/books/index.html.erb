<body>
  <h1>Books</h1>

  <table>
    <thread>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
      
      <tbody>
        <% @books.each do |book| %>
          <%= book.title %>
          <%= book.body %>
          <%= link_to "show", book_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%= link_to "destroy", book_path(book.id), method: :delete, "data=comfirm" => "Are you sure?" %>
        <% end %>
      </tbody>
    </thread>
  </table>


  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_message.each do |message| %>
        <li><% message %></li>
      <% end %>
    </ul>
  <% end %>


  <%= form_with model: @book do |f| %>
    <div class ="text-field">
      <div>title</div>
      <%= f.text_field :title %>
    </div>
  
    <div class ="text-area">
      <div>body</div>
      <%= f.text_area :body %>
    </div>
  
    <div class ="text-submit"><%= f.submit 'Create Book' %></div>

  <% end %>
</body>
