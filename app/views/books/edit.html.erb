<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h3 class="edit-top">Editing Book</h3>

<%= form_with model: @book do |f| %>

  <div class="edit-item">Title</div>
  <%= f.text_field :title %>

  <div class="edit-item">Body</div>
  <%= f.text_area :body %>

  <div class="edit-box"><%= f.submit 'Update Book' %></div>
  <div class="menu-list">
    <%= link_to "Show", book_path(@book.id) %>|
    <%= link_to "Back", "/books" %>
  </div>

<% end %>